// ==========================================
// CONFIGURAÇÃO DO PRISMA CLIENT
// ==========================================
generator client {
  provider = "prisma-client-js"
}

// ==========================================
// CONEXÃO COM BANCO DE DADOS
// ==========================================
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================
// MODELO DE USUÁRIO
// ==========================================
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  language  String   @default("pt")
  tier      String   @default("starter")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==========================================
// MODELO DE TEMPLATE
// ==========================================
model Template {
  id        String   @id @default(cuid())
  namePt    String
  nameEn    String
  promptPt  String   @db.Text
  promptEn  String   @db.Text
  platform  String
  duration  String
  createdAt DateTime @default(now())
}
